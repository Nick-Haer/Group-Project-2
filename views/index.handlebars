<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>
<div class="site-content">
  <div class="container">
        <div class="signPromptRow row">
        <div class="col-12">
            <a class="btn btn-block" href="/" id="promptLogin">Click Here To Try Again</a>
        </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <ul id="example-list" class="list-group">
          {{#each games}}
          <li data-id="{{this.id}}" class="list-group-item">
            <div class="container">
              <div class="row">
                <div class="col-5">
                  <h3 id="gameName">{{name}}</h3>
                  <img class="gameImage" src="https:{{cover.url}}"
                    alt="https://steamuserimages-a.akamaihd.net/ugc/1136285831726016610/8ABCD19214B516DCD4E351E241C969C6A0C8F9D8/">
                  <div></div>
                  <a href="example/{{this.id}}">{{this.name}}</a>
                  <p>Genres: <i>{{genres.0.slug}} {{genres.1.slug}}</i></p>
                  <span>Platforms:</span>
                  {{#each platforms}}
                  <span><i>{{slug}}</i><span>
                      {{/each}}
                      <p>Rating: <i>{{total_rating}}</i></p>
                </div>
                <div class="col-7">
                  <h4 style="font-size: 30px; font-weight: bold;">Summary: </h4>
                  <h5 style="overflow: auto; height: 268px; font-size: 1.3rem;">{{summary}}</h5>
                  <button class="preferGame add-to-preferences-btn" id="{{id}}">Save to Preferences</button>
                </div>
              </div>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>